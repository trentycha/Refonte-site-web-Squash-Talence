{% extends 'base.html.twig' %}

{% block title %}Réservez un créneau !{% endblock %}

{% block body %}
<style>
    body {
        background-size: cover;
        font-family: 'Poppins', sans-serif;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin: 0;
    }

    .glass-container {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border-radius: 20px;
        padding: 3rem 2rem;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        text-align: center;
        width: 100%;
        max-width: 800px;
        color: #fff;
    }

    h1 {
        margin-bottom: 2rem;
        font-weight: 600;
        letter-spacing: 1px;
    }

    form {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem 2rem;
        text-align: left;
        align-items: start;
    }

    form div {
        margin-bottom: 0;
    }

    input, select {
        width: 100%;
        padding: 0.75rem;
        border-radius: 10px;
        border: none;
        outline: none;
        background: rgba(255, 255, 255, 0.8);
        color: #333;
        font-size: 1rem;
    }

    .form-check {
        display: flex;
        align-items: center;
        gap: 0.6rem;
    }

    .form-check input[type="checkbox"] {
        width: 18px;
        height: 18px;
        accent-color: #ffffff;
        cursor: pointer;
    }

    .form-check label {
        color: #fff;
        font-size: 0.95rem;
        cursor: pointer;
    }

    button {
        width: 100%;
        background: rgba(255, 255, 255, 0.25);
        color: #fff;
        border: 1px solid rgba(255, 255, 255, 0.4);
        border-radius: 10px;
        padding: 0.75rem;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        align-self: start;
        margin-top: 25px;
    }

    button:hover {
        background: rgba(255, 255, 255, 0.4);
    }

    p {
        margin-top: 1.5rem;
    }

    a {
        color: #fff;
        text-decoration: underline;
    }

    .error {
        background-color: rgba(255, 0, 0, 0.3);
        padding: 0.5rem;
        border-radius: 8px;
        margin-bottom: 1rem;
    }

    @media (max-width: 768px) {
        form {
            grid-template-columns: 1fr;
        }
        button {
            width: 100%;
        }
    }
</style>

<div class="glass-container">
    <h1>Inscrivez-vous !</h1>

    {{ form_start(form) }}
        <div>
            {{ form_row(form.date) }}
            {{ form_row(form.hour) }}
            <button type="submit">Je réserve !</button>
        </div>

    {{ form_end(form) }}

</div>
{% endblock %}
